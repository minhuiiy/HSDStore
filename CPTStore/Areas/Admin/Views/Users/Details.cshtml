@model CPTStore.Areas.Admin.Controllers.UserViewModel
@{
    ViewData["Title"] = "Chi tiết người dùng";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Chi tiết người dùng</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.User.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin cơ bản</h6>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Tên đăng nhập:</div>
                        <div class="col-md-8">@Model.User.UserName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Email:</div>
                        <div class="col-md-8">@Model.User.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Họ tên:</div>
                        <div class="col-md-8">@Model.User.FirstName @Model.User.LastName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Số điện thoại:</div>
                        <div class="col-md-8">@Model.User.PhoneNumber</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Trạng thái:</div>
                        <div class="col-md-8">
                            @if (Model.User.IsActive)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Bị khóa</span>
                            }
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Ngày tạo:</div>
                        <div class="col-md-8">@Model.User.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin bổ sung</h6>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Địa chỉ:</div>
                        <div class="col-md-8">@Model.User.Address</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Thành phố:</div>
                        <div class="col-md-8">@Model.User.City</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Quốc gia:</div>
                        <div class="col-md-8">@Model.User.Country</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Mã bưu điện:</div>
                        <div class="col-md-8">@Model.User.PostalCode</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Vai trò:</div>
                        <div class="col-md-8">
                            @foreach (var role in Model.Roles)
                            {
                                <span class="badge bg-primary me-1">@role</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>