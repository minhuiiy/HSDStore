@model CPTStore.Areas.Admin.ViewModels.OrderEditViewModel
@using CPTStore.Models
@{
    ViewData["Title"] = "Cập nhật trạng thái đơn hàng";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Cập nhật trạng thái đơn hàng #@Model.Order.OrderNumber</h1>
        <div>
            <a asp-action="Details" asp-route-id="@Model.Order.Id" class="btn btn-info">
                <i class="bi bi-info-circle"></i> Xem chi tiết
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Cập nhật trạng thái</h6>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateStatus" method="post">
                        <input type="hidden" asp-for="Order.Id" />
                        
                        <div class="row mb-3">
                            <label class="col-md-3 col-form-label">Trạng thái hiện tại:</label>
                            <div class="col-md-9">
                                <input type="text" value="@Model.Order.Status" class="form-control" readonly />
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <label class="col-md-3 col-form-label">Trạng thái mới:</label>
                            <div class="col-md-9">
                                <select name="status" asp-items="Model.OrderStatuses" class="form-select"></select>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Cập nhật trạng thái
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin đơn hàng</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Khách hàng:</label>
                        <p>@Model.Order.CustomerName</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Email:</label>
                        <p>@Model.Order.CustomerEmail</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Số điện thoại:</label>
                        <p>@Model.Order.CustomerPhone</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Địa chỉ:</label>
                        <p>@Model.Order.ShippingAddress</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Ngày đặt hàng:</label>
                        <p>@Model.Order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tổng tiền:</label>
                        <p class="text-primary fw-bold">@Model.Order.TotalAmount.ToString("#,##0") VNĐ</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>