@model CPTStore.Models.ErrorViewModel
@{
    ViewData["Title"] = Model.Title ?? "Lỗi tồn kho";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body text-center p-5">
                    <h1 class="display-1 text-warning mb-4">
                        <i class="bi bi-exclamation-triangle"></i>
                    </h1>
                    
                    <h2 class="mb-4">@(Model.Title ?? "Lỗi tồn kho")</h2>
                    
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-warning">
                            @Model.Message
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.SuggestedAction))
                    {
                        <div class="alert alert-info">
                            @Model.SuggestedAction
                        </div>
                    }
                    
                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted small mb-4">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }
                    
                    <div class="mt-4 d-flex justify-content-center gap-3">
                        <a asp-controller="Cart" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-cart"></i> Xem giỏ hàng
                        </a>
                        <a asp-controller="Inventory" asp-action="SynchronizeStock" class="btn btn-success">
                            <i class="bi bi-arrow-repeat"></i> Đồng bộ hóa tồn kho
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-house-door"></i> Quay về trang chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>