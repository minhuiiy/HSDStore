@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container mt-4">
    <!-- Banner chính -->
    <div class="row mb-4">
        <div class="col-10 mx-auto">
            <div id="mainCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="0" class="active"></button>
                    <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="2"></button>
                </div>
                <div class="carousel-inner rounded">
                    <div class="carousel-item active">
                        <img src="/images/banner1.svg" class="d-block w-100" alt="Banner 1" onerror="this.src='/images/placeholder-banner.jpg'">
                        <div class="carousel-caption d-none d-md-block">
                            <h2>Chào mừng đến với CPT Store</h2>
                            <p>Khám phá các sản phẩm chất lượng cao với giá cả hợp lý</p>
                            <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Mua sắm ngay</a>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/images/banner2.svg" class="d-block w-100" alt="Banner 2" onerror="this.src='/images/placeholder-banner.jpg'">
                        <div class="carousel-caption d-none d-md-block">
                            <h2>Khuyến mãi mùa hè</h2>
                            <p>Giảm giá lên đến 50% cho các sản phẩm mùa hè</p>
                            <a href="@Url.Action("Index", "Product", new { categoryId = 1 })" class="btn btn-primary">Xem ngay</a>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/images/banner3.svg" class="d-block w-100" alt="Banner 3" onerror="this.src='/images/placeholder-banner.jpg'">
                        <div class="carousel-caption d-none d-md-block">
                            <h2>Sản phẩm mới</h2>
                            <p>Khám phá các sản phẩm mới nhất của chúng tôi</p>
                            <a href="@Url.Action("Index", "Product", new { categoryId = 2 })" class="btn btn-primary">Khám phá</a>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>

    <!-- Danh mục nổi bật -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-center mb-4">Danh mục sản phẩm</h2>
        </div>
        @if (ViewBag.Categories != null)
        {
            @foreach (var category in ViewBag.Categories)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(category.ImageUrl))
                        {
                            <img src="@category.ImageUrl" class="card-img-top" alt="@category.Name" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <img src="/images/placeholder-category.jpg" class="card-img-top" alt="@category.Name" style="height: 200px; object-fit: cover;">
                        }
                        <div class="card-body text-center">
                            <h5 class="card-title">@category.Name</h5>
                            <p class="card-text">@category.Description</p>
                            <a href="@Url.Action("Index", "Product", new { categoryId = category.Id })" class="btn btn-outline-primary">Xem sản phẩm</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <!-- Danh mục mẫu khi không có dữ liệu -->
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="/images/placeholder-category.jpg" class="card-img-top" alt="Điện thoại" style="height: 200px; object-fit: cover;">
                    <div class="card-body text-center">
                        <h5 class="card-title">Điện thoại</h5>
                        <p class="card-text">Các loại điện thoại thông minh mới nhất</p>
                        <a href="@Url.Action("Index", "Product")" class="btn btn-outline-primary">Xem sản phẩm</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="/images/placeholder-category.jpg" class="card-img-top" alt="Laptop" style="height: 200px; object-fit: cover;">
                    <div class="card-body text-center">
                        <h5 class="card-title">Laptop</h5>
                        <p class="card-text">Laptop mạnh mẽ cho công việc và giải trí</p>
                        <a href="@Url.Action("Index", "Product")" class="btn btn-outline-primary">Xem sản phẩm</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="/images/placeholder-category.jpg" class="card-img-top" alt="Phụ kiện" style="height: 200px; object-fit: cover;">
                    <div class="card-body text-center">
                        <h5 class="card-title">Phụ kiện</h5>
                        <p class="card-text">Phụ kiện chính hãng cho các thiết bị của bạn</p>
                        <a href="@Url.Action("Index", "Product")" class="btn btn-outline-primary">Xem sản phẩm</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Sản phẩm nổi bật -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-center mb-4">Sản phẩm nổi bật</h2>
        </div>
        @if (ViewBag.FeaturedProducts != null)
        {
            @foreach (var product in ViewBag.FeaturedProducts)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <img src="/images/no-image.png" class="card-img-top" alt="No Image" style="height: 200px; object-fit: cover;">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-truncate">@product.ShortDescription</p>
                            <p class="card-text fw-bold text-danger">@product.Price.ToString("N0") VNĐ</p>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-sm btn-primary">Chi tiết</a>
                            <form method="post" action="@Url.Action("AddToCartPost", "Cart")">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="productId" value="@product.Id" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn btn-sm btn-success">Thêm vào giỏ</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <!-- Sản phẩm mẫu khi không có dữ liệu -->
            @for (int i = 1; i <= 4; i++)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100">
                        <img src="/images/placeholder-product.jpg" class="card-img-top" alt="Sản phẩm @i" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">Sản phẩm mẫu @i</h5>
                            <p class="card-text text-truncate">Mô tả ngắn về sản phẩm mẫu @i</p>
                            <p class="card-text fw-bold text-danger">@(1000000 * i).ToString("N0") VNĐ</p>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Product")" class="btn btn-sm btn-primary">Chi tiết</a>
                            <a href="@Url.Action("Index", "Product")" class="btn btn-sm btn-success">Thêm vào giỏ</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <!-- Sản phẩm mới -->
    <div class="row mb-4 pb-5" id="new-products-section">
        <div class="col-12">
            <h2 class="text-center mb-4">Sản phẩm mới</h2>
        </div>
        @if (ViewBag.NewProducts != null)
        {
            @foreach (var product in ViewBag.NewProducts)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100">
                        <div class="badge bg-success position-absolute" style="top: 10px; right: 10px;">Mới</div>
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <img src="/images/no-image.png" class="card-img-top" alt="No Image" style="height: 200px; object-fit: cover;">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-truncate">@product.ShortDescription</p>
                            <p class="card-text fw-bold text-danger">@product.Price.ToString("N0") VNĐ</p>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-sm btn-primary">Chi tiết</a>
                            <form method="post" action="@Url.Action("AddToCartPost", "Cart")">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="productId" value="@product.Id" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn btn-sm btn-success">Thêm vào giỏ</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <!-- Sản phẩm mẫu khi không có dữ liệu -->
            @for (int i = 1; i <= 4; i++)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100">
                        <div class="badge bg-success position-absolute" style="top: 10px; right: 10px;">Mới</div>
                        <img src="/images/placeholder-product.jpg" class="card-img-top" alt="Sản phẩm mới @i" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">Sản phẩm mới @i</h5>
                            <p class="card-text text-truncate">Mô tả ngắn về sản phẩm mới @i</p>
                            <p class="card-text fw-bold text-danger">@(1500000 * i).ToString("N0") VNĐ</p>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Product")" class="btn btn-sm btn-primary">Chi tiết</a>
                            <a href="@Url.Action("Index", "Product")" class="btn btn-sm btn-success">Thêm vào giỏ</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <div class="clearfix mb-5"></div>

    <!-- Ưu đãi -->
    <div class="row mb-4" id="promotions-section">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h3>Đăng ký nhận thông tin khuyến mãi</h3>
                            <p>Nhận thông tin về các sản phẩm mới và khuyến mãi đặc biệt từ CPT Store</p>
                        </div>
                        <div class="col-md-4">
                            <form class="d-flex">
                                <input type="email" class="form-control me-2" placeholder="Email của bạn">
                                <button type="submit" class="btn btn-primary">Đăng ký</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lợi ích -->
    <div class="row mb-4 text-center">
        <div class="col-md-3 mb-3">
            <div class="p-3">
                <i class="bi bi-truck" style="font-size: 2.5rem;"></i>
                <h5 class="mt-3">Giao hàng miễn phí</h5>
                <p>Cho đơn hàng từ 500.000 VNĐ</p>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="p-3">
                <i class="bi bi-shield-check" style="font-size: 2.5rem;"></i>
                <h5 class="mt-3">Bảo hành 12 tháng</h5>
                <p>Đổi trả trong 30 ngày</p>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="p-3">
                <i class="bi bi-credit-card" style="font-size: 2.5rem;"></i>
                <h5 class="mt-3">Thanh toán an toàn</h5>
                <p>Nhiều phương thức thanh toán</p>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="p-3">
                <i class="bi bi-headset" style="font-size: 2.5rem;"></i>
                <h5 class="mt-3">Hỗ trợ 24/7</h5>
                <p>Hotline: 1900 1234</p>
            </div>
        </div>
    </div>
</div>
