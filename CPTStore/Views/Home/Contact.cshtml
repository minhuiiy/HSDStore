@{
    ViewData["Title"] = "Liên hệ";
}

<div class="container py-5">
    <h1 class="text-center mb-5">Liên hệ với chúng tôi</h1>

    <div class="row mb-5">
        <div class="col-md-6 mb-4 mb-md-0">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <h2 class="mb-4">Thông tin liên hệ</h2>
                    
                    <div class="d-flex mb-4">
                        <div class="flex-shrink-0">
                            <i class="bi bi-geo-alt text-primary" style="font-size: 2rem;"></i>
                        </div>
                        <div class="ms-3">
                            <h5>Địa chỉ</h5>
                            <p class="mb-0">123 Đường ABC, Quận XYZ<br>Thành phố Hồ Chí Minh, Việt Nam</p>
                        </div>
                    </div>
                    
                    <div class="d-flex mb-4">
                        <div class="flex-shrink-0">
                            <i class="bi bi-telephone text-primary" style="font-size: 2rem;"></i>
                        </div>
                        <div class="ms-3">
                            <h5>Điện thoại</h5>
                            <p class="mb-0">Hotline: 1900 1234<br>Hỗ trợ kỹ thuật: 1900 4321</p>
                        </div>
                    </div>
                    
                    <div class="d-flex mb-4">
                        <div class="flex-shrink-0">
                            <i class="bi bi-envelope text-primary" style="font-size: 2rem;"></i>
                        </div>
                        <div class="ms-3">
                            <h5>Email</h5>
                            <p class="mb-0">info@cptstore.com<br>support@cptstore.com</p>
                        </div>
                    </div>
                    
                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <i class="bi bi-clock text-primary" style="font-size: 2rem;"></i>
                        </div>
                        <div class="ms-3">
                            <h5>Giờ làm việc</h5>
                            <p class="mb-0">Thứ Hai - Thứ Bảy: 8:00 - 21:00<br>Chủ Nhật: 9:00 - 18:00</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <h2 class="mb-4">Gửi tin nhắn cho chúng tôi</h2>
                    
                    <form id="contactForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="name" class="form-label">Họ và tên</label>
                                <input type="text" class="form-control" id="name" required>
                                <div class="invalid-feedback">Vui lòng nhập họ và tên</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" required>
                                <div class="invalid-feedback">Vui lòng nhập email hợp lệ</div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="phone" class="form-label">Số điện thoại</label>
                            <input type="tel" class="form-control" id="phone" required>
                            <div class="invalid-feedback">Vui lòng nhập số điện thoại hợp lệ</div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="subject" class="form-label">Chủ đề</label>
                            <select class="form-select" id="subject" required>
                                <option value="" selected disabled>Chọn chủ đề</option>
                                <option value="general">Thông tin chung</option>
                                <option value="order">Đơn hàng</option>
                                <option value="product">Sản phẩm</option>
                                <option value="technical">Hỗ trợ kỹ thuật</option>
                                <option value="other">Khác</option>
                            </select>
                            <div class="invalid-feedback">Vui lòng chọn chủ đề</div>
                        </div>
                        
                        <div class="mb-4">
                            <label for="message" class="form-label">Nội dung tin nhắn</label>
                            <textarea class="form-control" id="message" rows="5" required></textarea>
                            <div class="invalid-feedback">Vui lòng nhập nội dung tin nhắn</div>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Gửi tin nhắn</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-5">
        <div class="card-body p-0">
            <div class="ratio ratio-16x9">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.4241674197956!2d106.69173781471815!3d10.780260992318356!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f38f9ed887b%3A0x14aded5703768989!2zUGjDsm5nIFRoxrDGoW5nIG3huqFpIEPDtG5nIG5naGnhu4dwIFZp4buHdCBOYW0!5e0!3m2!1svi!2s!4v1625647796371!5m2!1svi!2s" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <h2 class="text-center mb-4">Các cửa hàng của chúng tôi</h2>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <h5 class="card-title">CPT Store - Chi nhánh Quận 1</h5>
                    <p class="card-text">
                        <i class="bi bi-geo-alt me-2"></i> 123 Đường ABC, Quận 1, TP. HCM<br>
                        <i class="bi bi-telephone me-2"></i> 028 1234 5678<br>
                        <i class="bi bi-envelope me-2"></i> q1@cptstore.com<br>
                        <i class="bi bi-clock me-2"></i> 8:00 - 21:00 (Hàng ngày)
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <h5 class="card-title">CPT Store - Chi nhánh Quận 7</h5>
                    <p class="card-text">
                        <i class="bi bi-geo-alt me-2"></i> 456 Đường DEF, Quận 7, TP. HCM<br>
                        <i class="bi bi-telephone me-2"></i> 028 8765 4321<br>
                        <i class="bi bi-envelope me-2"></i> q7@cptstore.com<br>
                        <i class="bi bi-clock me-2"></i> 8:00 - 21:00 (Hàng ngày)
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <h5 class="card-title">CPT Store - Chi nhánh Hà Nội</h5>
                    <p class="card-text">
                        <i class="bi bi-geo-alt me-2"></i> 789 Đường GHI, Quận Cầu Giấy, Hà Nội<br>
                        <i class="bi bi-telephone me-2"></i> 024 9876 5432<br>
                        <i class="bi bi-envelope me-2"></i> hn@cptstore.com<br>
                        <i class="bi bi-clock me-2"></i> 8:00 - 21:00 (Hàng ngày)
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/contact-form.js"></script>
}