@{
    ViewData["Title"] = "Xác nhận đặt lại mật khẩu";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-check-circle" style="font-size: 3rem; color: #28a745;"></i>
                    </div>
                    <h5 class="text-center mb-3">Mật khẩu đã được đặt lại thành công!</h5>
                    <p class="text-center mb-4">
                        Mật khẩu của bạn đã được đặt lại thành công. Bây giờ bạn có thể đăng nhập bằng mật khẩu mới.
                    </p>
                    <div class="text-center">
                        <a asp-action="Login" class="btn btn-primary">Đăng nhập</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>