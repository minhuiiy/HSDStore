@{
    ViewData["Title"] = "Truy cập bị từ chối";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-shield-exclamation text-danger" style="font-size: 5rem;"></i>
                    </div>
                    <h2 class="mb-4">Quyền truy cập bị từ chối</h2>
                    <p class="lead mb-4">Bạn không có quyền truy cập vào trang này.</p>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house-door me-2"></i>Về trang chủ
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>